<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome to blog !{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
              crossorigin="anonymous">

        <style>
          main {
            max-width: 50vw;
            display: grid;
            place-content: center;
            height: 100vh;
          }
          article {
            display: grid;
            justify-items: center;
            width: 25vw;
            height: 25vh;
            place-content: center;
            gap: 2rem;
          }
          aside {
            position: fixed;
            inset: 0 0 0 auto;
            width: 50vw;
            display: grid;
            place-content: center;
            background: lightsteelblue;
            padding: 4rem;
          }
          nav {
            display: grid;
            gap: 1rem;
            a {
                padding: 1rem;
                background: lightcoral;
                color: white;
                text-decoration: none;
                border-radius: 0.5rem;
                text-align: center;
                }
          }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <meta name="turbo-refresh-method" content="morph">
</head>
<body>

    <main>
        <article>
            {% block content %}
            {% endblock %}
            
            <nav class="nav">
                <a href="{{ path('app_react_index') }}"> Index (player)</a>
                <a href="{{ path('app_react_index_another') }}"> Another (player)</a>
                <a href="{{ path('app_react_index_noplayer') }}"> Last (NO PLAYER)</a>
            </nav>
        </article>
    </main>

    <aside >
        {% block player %}
            <div id="my_player" data-turbo-permanent="true">
                {% include('index/player.html.twig') %}
            </div>
        {% endblock %}
    </aside>
</body>
</html>
